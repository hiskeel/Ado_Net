<Window x:Class="_4_ConnectedMode_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4_ConnectedMode_wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <DockPanel>
            <ToolBar DockPanel.Dock="Top">
                <Button Click="getProducts">Get Products</Button>
            </ToolBar>
            
            <DataGrid Name="dataGrid" DockPanel.Dock="Top">
                
            </DataGrid>
            <Canvas>
                <Border>
                    <Border.Child>
                        <TextBox KeyDown="idProduct_KeyDown" Width="400" Height="20" Name="idProduct"></TextBox>
                    </Border.Child>
                </Border>
            </Canvas>
            
        </DockPanel>
       
    </Grid>
</Window>
